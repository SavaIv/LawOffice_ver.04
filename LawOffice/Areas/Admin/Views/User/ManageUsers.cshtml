<div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>User</th>
                <th>e-mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <button type="button" asp-area="admin" asp-action="edit" asp-controller="user" asp-route-id="@user.Id" class="btn btn-block btn-outline-secondary btn-xs">User Info Edit</button>
                        <button type="button" asp-area="admin" asp-action="roles" asp-controller="user" asp-route-id="@user.Id"class="btn btn-block btn-outline-secondary btn-xs">User Role Edit</button>
                        <button type="button" onclick="location.href='/admin/user/edit'" asp-route-id="@user.Id" class="btn btn-block btn-outline-secondary btn-xs">Test Test Test</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

</div>